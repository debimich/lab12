<table border="1">
  <tr>
    <th><%= t 'definition' %></th>
	<th></th>
    <th><%= t 'author' %></th>
  </tr>

  <% @definitions.each do |defin| %>
  <% defin_user = defin.User %>
    <tr>
		<td> <%= button_to defin[:def], "/definitions/#{defin[:id]}", method: :get, class: "btn btn-link btn-sm nav-link" %> </td>
		<td>
			<% if current_user == defin_user %>
				<small><%= button_to "[x]", "definitions/destroy", method: :delete, params: {id: defin[:id]}, class: "btn btn-link btn-sm nav-link", form: { data: { turbo_confirm: t("ausure") } }%></small>
			<% end %>
		</td>
		<td><%= defin_user.nickname %></td>
	</tr>
  <% end %>
</table>